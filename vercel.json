{
    "version": 2,
    "builds": [
        {
            "src": "index.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "api/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "views/**/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "css/**",
            "use": "@vercel/static"
        },
        {
            "src": "js/**",
            "use": "@vercel/static"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}